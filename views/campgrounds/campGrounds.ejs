<%- include('../partials/yelp/header'); -%>

<div class="container">
<div class="jumbotron">
<h1 class="display-4">Welcome to Yelp Camps</h1>
    <p class="lead">Learn about and share outdoor camps for people who has to stay home.</p>
    <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Click to Create a New Camp</a>
    <p>
        <form action="/campgrounds" method='get' class="form-inline">
            <div>
                <input type="text" name="search" placeholder="Campground search..." class="form-control">
                <input type="submit" value="Search" class="btn-default">
            </div>


    </form>
    </p>
</div>
<div class = "row text-center" style="display: flex; flex-wrap: wrap">
    <div class="col-md-12">
        <% if(noMatch !==undefined) {%>
        <h3><%= noMatch%></h3>
        <%}%>
    </div>
    <% for (let i = 0; i< campGrounds.length; i++) {%>
<div class="col-md-3 col-sm-6">
        <div class="card" style="">
            <img src="<%=campGrounds[i]['image']%>">


            <div class="card-body">
                <p class="card-text"><%=campGrounds[i]['name']%></p>
            </div>

            <a href="/campgrounds/<%=campGrounds[i]['_id']%>" class="btn btn-primary">more info</a>

        </div>
</div>

<%}%>
</div>


</div>
<%- include('../partials/yelp/footer'); -%>